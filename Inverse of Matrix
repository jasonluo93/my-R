
## The two functions created below, makeCacheMatrix and CacheSolve, are
## for week 3 assignment of R Programming on Coursera

## The first function, makeCacheMatrix creates a special list containg a
## a function to
##  1. set the value of the matrix
##  2. get the value of the matrix
##  3. set the value of the matrix inversion
##  4. get the value of the matrix inversion

makeCacheMatrix <- function(x = matrix())
{
	inv <- NULL
	set <- function(y)
	{
		x <<- y
		inv <<- NULL
	}
	get <- function() x
	setinv <- function(inversion) inv <<- inversion
	getinv <- function() inv
	list(set = set, get = get, setinv = setinv, getinv = getinv)
}

## The second function solve the inversion of the matrix. 

cacheSolve <- function(x, ...)
{
	inv <- x$getinv()
	if(!is.null(inv))
	{
		massage("getting cached data")
		return(inv)
	}
	data <- x$get()
	inv <- solve(data)
	inv
}
